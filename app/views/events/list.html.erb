<div class="container" style="margin-top:100px">
  <h1>List Events</h1>

  <table class="table table-hover">
    <thead class="thead thead-default">
      <tr>
        <td>Name</td>
        <td>Status</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event|  %>
        <tr>
          <td><%= event.name %></td>
          <td>
            <% if event.published_at == nil %>
              <%= link_to "Publish", "/", class: "btn btn-primary"  %>
            <% else %>
              <h3>Published</h3>
            <% end %>
          </td>
          <td>
              <%= link_to "Create ticket types", new_event_ticket_type_path(event), class: "btn btn-primary"  %>
          </td>
        </tr>
      <% end %>
    </table>
  </tbody>
</div>
