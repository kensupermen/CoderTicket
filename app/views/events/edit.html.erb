<div class="container" style="margin-top:100px">
  <h1>Edit event</h1>

  <%= simple_form_for @event do |f| %>
    <%= f.input :name %>
    <%= f.input :extended_html_description %>
    <%= f.input :venue_id, label: 'Venue', collection: @venues.map{|venue| [venue.name, venue.id] }, as: :select, include_blank: false %>
    <%= f.input :category_id, label: 'Category', collection: @categories.map{|category| [category.name, category.id] }, as: :select, include_blank: false %>
    <%= f.input :starts_at, as: :date, start_year: Date.today.year, end_year: Date.today.year + 3, discard_day: true, order: [:month, :year] %>
    <%= f.input :ends_at, as: :date, start_year: Date.today.year, end_year: Date.today.year + 3, discard_day: true, order: [:month, :year] %>
    <%= f.input :hero_image_url %>
    <%= f.input :creator_id, as: :hidden, input_html: {value: current_user.id} %>
    <%= f.submit "Update event", class: 'btn btn-primary' %>
  <% end %>
</div>
